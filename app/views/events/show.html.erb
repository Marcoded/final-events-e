<p><%= link_to ' <= All Events', events_path, class: 'text-blue-500 text-2xl mt-10 font-bold hover:underline my-10'  %></p>

<div class="flex flex-col items-center justify-center h-screen">
    <div class = 'font-bold text-5xl text-blue-400'><%=@event.name%></div>
    <div class = "text-3xl py-5"><%=@event.location%></div>
    <div class = " italic"><%=@event.date%></div>

    <div class="flex flex-wrap">
     <%= button_to 'Join this event.', event_enrollments_path(@event, attendee: current_user), method: :post %>
    </div>
    <%= button_to 'Leave this event.', event_enrollment_path(@event, current_user.enrollments), method: :delete %>


   <%@event.attendees.each do |attendee|%>
   <%= attendee.email %>
   <% end %>
   
    

  
</div>
