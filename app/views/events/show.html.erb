<p><%= link_to ' <= All Events', events_path, class: 'text-blue-500 text-2xl mt-10 font-bold hover:underline my-10'  %></p>

<div class="block bg-white rounded-lg shadow-md p-6 hover:bg-slate-50 text-center ">
    <div class = 'font-bold text-5xl text-blue-400'><%=@event.name%></div>
    <div class = "text-3xl py-5"><%=@event.location%></div>
    <p class="text-gray-700 mb-4"><%= @event.date.strftime('%B %d, %Y') %></p>
    <div class = "text-blue-500 font-bold text-md">
        <% unless @event.attendees.include?(current_user)  %>
              <%= button_to 'Join this event.', event_enrollments_path(@event, attendees: current_user), method: :post %> 
        <% else %>
          <%= button_to 'Leave this event.', event_enrollment_path(@event, current_user.enrollments), method: :delete %>
        <% end %>
    </div>
     
    
    


   <%@event.attendees.each do |attendee|%>
   <%= attendee.email %>
   <% end %>
   
    

  
</div>
