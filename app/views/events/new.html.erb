<div class = "flex justify-center items-center h-screen ">

    <div class = "bg-slate-600 text-slate-100 h-1/3 w-1/3 flex justify-center items-center gap-4 rounded-xl align-middle shadow-sm">
    <%= form_with model: @event do |f| %>

        <div>
            <%= f.label :name, 'name' %>
            <div class = "text-slate-700"><%= f.text_field :name %></div>
        </div>

        <div>
            <%= f.label :location, 'location' %>
             <div class = "text-slate-700"><%= f.text_field :location %>
        </div>

        <div>
            <%= f.label :date, 'date' %>
             <div class = "text-slate-700"> <%= f.date_field :date %></div>
        </div>


        <div class = 'bg-slate-700 w-25 h-10  flex items-center'>
            
            <%= f.submit 'Create event' %>
            <% end %>
        </div>


    </div>
</div>
